<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewData["Title"] - PhulkariThreadzWeb</title>

    <link rel="shortcut icon" type="image/x-icon" href="/Images/favicon.ico" />

    <!-- Vendor CSS -->
    <link href="~/css/vendor/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/vendor/vendor.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/css/style-sport.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <!-- Custom font -->
    <link href="~/fonts/icomoon/icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open%20Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PhulkariThreadzWeb.styles.css" asp-append-version="true" />

    @*<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@



</head>

<body>


    <div id="dvProductGrid" class="prd-grid product-listing data-to-show-3 data-to-show-md-3 data-to-show-sm-2 js-category-grid prd-horgrid" data-grid-tab-content>
        @if (Model.Count > 0)
        {
            <input id="hfProductCount" hidden type="text" value="@Model.Count" />
        }
        else
        {
            <input id="hfProductCount" hidden type="text" value="0" />
        }
        @foreach (var item in Model)
        {
            <div id="dvProductLables" class="prd prd--style2 prd-labels--max prd-labels-shadow prd-w-xs">
                <div class="prd-inside">
                    <div class="prd-img-area">
                        <a asp-area="Customer" asp-controller="Shop" asp-action="ProductDetailView" asp-route-productId="@item.ProductId" class="prd-img image-hover-scale image-container">
                            <img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="@item.MainImageUrl" alt="@item.ProductName" class="js-prd-img fade-up ls-is-cached lazyload ">
                            <div class="foxic-loader"></div>
                            <div class="prd-big-squared-labels">
                            </div>
                        </a>
                        <div class="prd-circle-labels">
                            <a onclick="AddToWishlist(@item.ProductId)" class="circle-label-compare circle-label-wishlist--add js-add-wishlist mt-0" title="Add To Wishlist"><i class="icon-heart-stroke"></i></a><a href="#" class="circle-label-compare circle-label-wishlist--off js-remove-wishlist mt-0" title="Remove From Wishlist"><i class="icon-heart-hover"></i></a>
                            <a onclick="OpenModel(@item.ProductId)" class="circle-label-qview prd-hide-mobile"><i class="icon-eye"></i><span>QUICK VIEW</span></a>
                        </div>

                        <ul class="list-options color-swatch">
                            @foreach (var img in item.ProductImages)
                            {
                                <li data-image="@img.ImageUrl" onhover="toggleImage(this);"><a href="#" class="js-color-toggle" data-toggle="tooltip" data-placement="right"><img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="@img.ImageUrl" class="lazyload fade-up" alt="Color Name"></a></li>
                            }
                        </ul>

                    </div>
                    <div class="prd-info">
                        <div class="prd-info-wrap">
                            <div class="prd-info-top">
                                <div class="prd-rating">
                                    @for (int i = 0; i < Convert.ToInt32(item.RatingCount); i++)
                                    {
                                        <i class="icon-star-fill fill"></i>
                                    }
                                    @for (int i = 0; i < 5 - Convert.ToInt32(item.RatingCount); i++)
                                    {
                                        <i class="icon-star"></i>
                                    }
                                </div>
                            </div>
                            <div class="prd-tag"><a href="#">PhilkariThreadz</a></div>
                            <h2 class="prd-title"><a href="product.html">@item.ProductName</a></h2>
                            <div class="prd-description">
                                @item.ProductDescription
                            </div>
                            <div class="prd-action">
                                <form method="post">
                                    <a class="btn js-prd-addtocart" onclick="AddToCart(@item.ProductId)">Add To Cart</a>
                                </form>
                            </div>
                        </div>
                        <div class="prd-hovers">
                            <div class="prd-circle-labels">
                                <div>
                                    <a onclick="AddToWishlist(@item.ProductId)" class="circle-label-compare circle-label-wishlist--add mt-0" title="Add To Wishlist"><i class="icon-heart-stroke"></i></a>
                                    <a onclick="RemoveFromWishlist(@item.ProductId)" class="circle-label-compare circle-label-wishlist--off mt-0" title="Remove From Wishlist"><i class="icon-heart-hover"></i></a>
                                </div>
                                <div class="prd-hide-mobile"><a onclick="OpenModel()" class="circle-label-qview"><i class="icon-eye"></i><span>QUICK VIEW</span></a></div>
                            </div>
                            <div class="prd-price">

                                <div class="price-new">₹ @item.Price</div>
                            </div>
                            <div class="prd-action">
                                <div class="prd-action-left">
                                    <form method="post">
                                        <a class="btn js-prd-addtocart" onclick="AddToCart(@item.ProductId)">Add To Cart</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="loader-horizontal-sm js-loader-horizontal-sm d-none" data-loader-horizontal style="opacity: 0;"><span></span></div>
    <div class="circle-loader-wrap">
        <div class="circle-loader">
            @if (Model.Count > 0)
            {
                <a id="btnLoadMore" onclick="LoadMore(this)" data-total="@Model[0].TotalCount" data-loaded="@Model.Count" data-load="5" class="lazyload js-circle-loader">

                    <svg id="svg_d" version="1.1" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="50%" cy="50%" r="63" fill="transparent"></circle>
                        <circle class="js-circle-bar" cx="50%" cy="50%" r="63" fill="transparent"></circle>
                    </svg>
                    <svg id="svg_m" version="1.1" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="50%" cy="50%" r="50" fill="transparent"></circle>
                        <circle class="js-circle-bar" cx="50%" cy="50%" r="50" fill="transparent"></circle>
                    </svg>
                    <div class="circle-loader-text">Load More</div>
                    <div class="circle-loader-text-alt"><span class="js-circle-loader-start"></span>&nbsp;out of&nbsp;@Model[0].TotalCount<span class="js-circle-loader-end"></span></div>
                </a>
            }
        </div>
    </div>
