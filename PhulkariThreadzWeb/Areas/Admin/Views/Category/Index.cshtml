@model IEnumerable<PhulkariThreadz.Models.Category>
@{
    ViewData["Title"] = "Index";
    int index = 1;
}

<div class="holder breadcrumbs-wrap mt-0">
    <div class="container">
        <ul class="breadcrumbs">
            <li><a asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><span>Category List</span></li>
        </ul>
    </div>
</div>

<div class="holder" style="min-height:700px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-18 col-lg-12">
                <div class="row" style="display:flex;">
                    <div class="col-md-6">
                        <h2>Category List</h2>
                    </div>
                    <div class="col-md-12" style="text-align: right">
                        <a asp-controller="Category" asp-action="Create" class="btn btn--sm"><i class="bi bi-plus-circle"></i>&nbsp; Add Category</a>
                    </div>
                </div>
                <div class="form-wrapper">
                    <form>
                        <div class="row">
                            <div class="col-md-10">
                                <label>&nbsp;</label>
                                <input type="text" id="txtSearchKey" placeholder="Search by category name..." class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <button data-toggle="tooltip" data-placement="top" title="" data-original-title="Search category" onclick="loadDataTable()" class="btn btn--sm mt-5"><i class="bi bi-search"></i></button>
                            </div>
                        </div>
                        <table class="table table-bordered table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th class="sno">#</th>
                                    <th>Category Name</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="sno">
                                            <label>@index</label>
                                            @{
                                                index++;
                                            }
                                        </td>
                                        <td>@item.Name</td>
                                        <td style="text-align: center;">

                                            <a asp-controller="Category" asp-action="Edit" asp-route-id=@item.Id data-toggle="tooltip" data-placement="top" title="Edit"><i class="bi bi-pencil-square"></i></a>&nbsp;
                                            <a asp-controller="Category" asp-action="Delete" asp-route-id=@item.Id data-toggle="tooltip" data-placement="top" title="Delete"><i class="bi bi-trash"></i></a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        $.(document).ready(function() {

            $(function() {
                $('[data-toggle="tooltip"]').tooltip()
            })

        })
    </script>

}
