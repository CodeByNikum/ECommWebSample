<div class="holder breadcrumbs-wrap mt-0">
    <div class="container">
        <ul class="breadcrumbs">
            <li><a asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><span>Product List</span></li>
        </ul>
    </div>
</div>
<div class="holder" style="min-height:700px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-18 col-lg-12">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Product List</h2>
                    </div>
                    <div class="col-md-6" style="text-align:right">
                        <a asp-controller="Product" asp-action="Upsert" class="btn btn--sm mt-2"><i class="bi bi-plus-circle"></i>&nbsp;Add Product</a>
@*                        <a asp-controller="ProductImage" asp-action="Index" title="Add product images" class="btn btn--sm"><i class="bi bi-plus-circle"></i> Product Image</a>
*@                  </div>
                </div>
                <div class="row">
                  
                    <div class="col-md-10">
                        <label>&nbsp;</label>
                        <input type="text" id="txtSearchKey" placeholder="Search by name, description, sub category name..." class="form-control" /> 
                    </div>
                    <div class="col-md-5">
                        <label class="mt-3">Sub Category</label> 
                        <select id="ddlSubCategory" class="form-control">
                           
                        </select>
                    </div>
                    <div class="col-md-3">
                         <button data-toggle="tooltip" data-placement="top" title="" data-original-title="Search product" onclick="loadDataTable()" class="btn btn--sm mt-5"><i class="bi bi-search"></i></button>
                    </div>
                </div>
                <table class="table table-bordered" id="tblData" style="width:100%;">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Product Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Sub Category</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>









@section Scripts{

    <script src="~/js/Product/Index.js"></script>

}