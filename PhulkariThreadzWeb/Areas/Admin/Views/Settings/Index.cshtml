
<div class="holder breadcrumbs-wrap mt-0">
    <div class="container">
        <ul class="breadcrumbs">
            <li><a asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><span>Banner Images Settings</span></li>
        </ul>
    </div>
</div>
<div class="holder" style="min-height:700px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-18 col-lg-12">
                <div class="row" style="display:flex;">
                    <div class="col-md-12">
                        <h2>Banner Images Settings</h2>
                    </div>
                </div>
                <div class="form-wrapper">
                    <form>
                        <input type="hidden" id="hfImageId" value="0" />
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <div id="dvAddImage" class="" style="border-radius:3px; border:1px dashed Lightgrey; cursor:pointer" width="100" height="100" data-toggle="tooltip" data-placement="top" title="" data-original-title="Add Image">
                                        <img src="https://icon-library.com/images/add-photo-icon/add-photo-icon-19.jpg" class="ml-1" width="98" height="98" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-9">
                                <div class="form-group">
                                    <button id="btnAdd" onclick="AddBannerImages()" type="button" class="btn btn--md">+ Add</button>
                                    <button id="btnClear" type="button" class="btn btn--md"> Cancel</button>
                                </div>
                            </div>
                        </div>


                        <input type="file" id="fuAddImage" accept="image/*" multiple="multiple" style="display:none" />

                        <div>
                            <output id="result"></output>
                        </div>

                        <div>
                            <table class="table table-bordered" style="border-radius:2px; border:2px solid Lightgrey; " id="tblImages">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th class="text-center">Images</th>
                                        <th class="text-center">Display Order</th>
                                     @*   <th class="text-center">Banner Text</th>
                                        <th class="text-center">Banner Sub Text</th>*@
                                        <th class="text-center">Link</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts{

    <script src="~/js/Settings/BannerImageSettings.js"></script>

}